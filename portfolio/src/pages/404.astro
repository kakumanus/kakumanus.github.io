---
import Layout from '../layouts/Layout.astro';
import phillySkyline from '../assets/philly-sketch.png';
import { Image } from 'astro:assets';
---

<Layout title="404">
    <section class="error-page">
        <Image src={phillySkyline} alt="" class="skyline" loading="eager" />

        <div class="error-content">
            <h1>Error 404</h1>
            <h2>ðŸš† Invalid Station</h2>
            <p>
                This page is not serviced by my line. Shall we head back to the main station?</br>
                <a href="/">Take me back.</a>
            </p>

        </div>
    </section>
</Layout>

<style>
    .error-page {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        padding: 2rem;
    }

    .skyline {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60%;
        object-fit: cover;
        object-position: bottom;
        opacity: 0.2;
    }

    .error-content {
        position: relative;
        z-index: 2;
        text-align: left;
        max-width: 600px;
    }

    h1 {
        font-size: clamp(6rem, 15vw, 10rem);
        font-weight: 500;
        color: #073072;
        margin: 0;
        line-height: 1;
    }

    h2 {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 400;
        margin: 1rem 0;
    }

    p {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: black;
        margin: 2rem 0;
        line-height: 1.6;
    }
    a {
        color: black
    }

    @media (max-width: 768px) {
        .error-page {
            padding: 1rem;
        }
    }
</style>