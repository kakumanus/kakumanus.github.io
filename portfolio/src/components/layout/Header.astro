<header class="header" id="main-header">
    <div class="header-content">
        <h1><a href="#" class="exclude-style">Sujan Kakumanu</a></h1>
        <button class="menu-toggle" id="menu-toggle" aria-label="Toggle menu">â˜°</button>
        <nav id="nav-menu">
            <h3><a href="#about">About</a></h3>
            <h3><a href="#experience">Experience</a></h3>
        </nav>
    </div>
</header>

<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: #f5f5f5;
        border-bottom: 1px solid #e0e0e0;
        z-index: 100;
        transform: translateY(-100%);
        transition: transform 0.3s ease-out;
    }

    .header.visible {
        transform: translateY(0);
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        position: relative;
    }

    h1 {
        font-size: 1.5rem;
        font-weight: 500;
        color: #073072;
        text-decoration: underline 4px #073072;
    }

    h1 a.exclude-style {
        color: #073072;
        text-decoration: underline 4px #073072;
    }

    .menu-toggle {
        display: none;
        background: none;
        border: none;
        font-size: 1.8rem;
        color: #073072;
        cursor: pointer;
    }

    nav {
        display: flex;
        gap: 2rem;
    }

    nav a {
        color: #000;
        text-decoration: none;
        font-size: 1rem;
        border-bottom: 2px solid transparent;
        transition: border-color 0.4s ease-out;
        padding-bottom: 2px;
    }

    nav a:hover {
        border-color: #0250bb;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .menu-toggle {
            display: block;
        }

        nav {
            position: absolute;
            top: 100%;
            right: 0;
            background: #f5f5f5;
            border: 1px solid #e0e0e0;
            border-top: none;
            flex-direction: column;
            gap: 0;
            width: 200px;
            display: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        nav.open {
            display: flex;
        }

        nav h3 {
            margin: 0;
            border-bottom: 1px solid #e0e0e0;
        }

        nav h3:last-child {
            border-bottom: none;
        }

        nav a {
            display: block;
            padding: 1rem 1.5rem;
            border-bottom: none;
        }

        nav a:hover {
            background: #e8f2ff;
        }
    }
</style>

<script>
    const header = document.getElementById('main-header');
    const introSection = document.querySelector('.intro');
    const menuToggle = document.getElementById('menu-toggle');
    const navMenu = document.getElementById('nav-menu');

    // Sticky header
    if (header && introSection) {
        new IntersectionObserver(
            ([entry]) => header.classList.toggle('visible', !entry.isIntersecting),
            { threshold: 0 }
        ).observe(introSection);
    }

    // Mobile menu
    menuToggle?.addEventListener('click', () => navMenu.classList.toggle('open'));
    navMenu?.addEventListener('click', (e) => {
        if (e.target.tagName === 'A') navMenu.classList.remove('open');
    });
    document.addEventListener('click', (e) => {
        if (!header.contains(e.target)) navMenu?.classList.remove('open');
    });
</script>