---
interface Props {
    image: string;
    imageAlt: string;
    title: string;
    organization: string;
    department?: string;
    dates: string;
}

const {
    image,
    imageAlt,
    title,
    organization,
    department,
    dates
} = Astro.props;
---

<div class="experience-tile">
    <img src={image} alt={imageAlt} class="background-image" />
    <div class="overlay"></div>

    <div class="content">
        <p class="title">{title}</p>
        <p class="organization">{organization}</p>
        {department && <p class="department">{department}</p>}
        <p class="dates">{dates}</p>
    </div>
</div>

<style>
    .experience-tile {
        position: relative;
        width: 400px;
        aspect-ratio: 1;
        border-radius: 24px;
        overflow: hidden;
        color: #fff;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: blur(3px);
        transform: scale(1.1);
        z-index: 1;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: 2;
    }

    .content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 3;
        padding: 2.5rem;
    }

    .title{
        font-family: 'IBM Plex Mono', serif;
        font-weight: bold;
    }
    .organization{
        font-family: 'IBM Plex Mono', serif;
    }
    .department {
        font-family: 'IBM Plex Mono', serif;
    }
    .dates {
        font-family: 'IBM Plex Mono', serif;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .content {
            padding: 2rem;
        }

        h3 {
            font-size: 1.25rem;
        }
    }
</style>